# MemeSnipe v25 Environment Template
# Copy this to .env and fill in your actual values

# === CRITICAL SECURITY & MODE ===
PAPER_TRADING_MODE=true
WALLET_KEYPAIR_FILENAME=my_wallet.json
JITO_AUTH_KEYPAIR_FILENAME=jito_auth_key.json

# === DOCKER NETWORKING & INTERNAL SERVICE URLS ===
REDIS_URL=redis://redis:6379
SIGNER_URL=http://signer:8989
DATABASE_URL=postgresql://postgres:memesnipe_secure_2024@postgres:5432/meme_snipe_v25
DB_PASSWORD=YOUR_SECURE_PASSWORD

# === DATA PROVIDER API KEYS ===
HELIUS_API_KEY=replace-me
FARCASTER_API_KEY=YOUR_FARCASTER_API_KEY
TWITTER_BEARER_TOKEN=replace-me
PYTH_API_KEY=demo_key_simulation_only
BIRDEYE_API_KEY=YOUR_BIRDEYE_API_KEY

# === EXTERNAL SERVICE URLS ===
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
JITO_RPC_URL=https://mainnet.block-engine.jito.wtf/api/v1
JUPITER_API_URL=https://quote-api.jup.ag/v6
DRIFT_API_URL=https://api.drift.trade
FARCASTER_API_URL=https://api.neynar.com/v2
BIRDEYE_API_URL=https://public-api.birdeye.so

# === GENETIC ALGORITHM & STRATEGY EVOLUTION ===
POPULATION_SIZE=50
CROSSOVER_RATE=0.7
MUTATION_RATE=0.15
TOURNAMENT_SIZE=5
MIN_SHARPE_FOR_PROMOTION=1.5
STRATEGY_PROMOTION_INTERVAL_SECS=3600
BACKTESTING_PLATFORM_API_KEY=internal_engine
BACKTESTING_PLATFORM_URL=http://backtest_engine:8000

# === TRADING & RISK PARAMETERS ===
INITIAL_CAPITAL_USD=200.00
GLOBAL_MAX_POSITION_USD=50.0
PORTFOLIO_STOP_LOSS_PERCENT=10.0
TRAILING_STOP_LOSS_PERCENT=5.0
SLIPPAGE_BPS=30
JITO_TIP_LAMPORTS=10000
MAX_DAILY_DRAWDOWN_PERCENT=10.0
POSITION_SIZING_MODE=DYNAMIC
MIN_LIQUIDITY_USD=10000
MAX_LEVERAGE=1.0

# === DATA VALIDATION ===
MAX_DATA_AGE_MS=500
MAX_PRICE_DEVIATION=0.05
CIRCUIT_BREAKER_THRESHOLD=0.30
ENABLE_ENHANCED_SIMULATION=true

# === MONITORING & LOGGING ===
LOG_LEVEL=info
DASHBOARD_PORT=8080
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
DATABASE_PATH=/app/shared/trades_v25.db
HISTORICAL_DATA_PATH=/app/shared/historical_data

# === REBALANCING ===
REBALANCE_INTERVAL_SECS=300
HEARTBEAT_INTERVAL_SECS=60
NUM_STRATEGIES_PAPER=5
NUM_STRATEGIES_LIVE=3
CAPITAL_SCALAR_PAPER=1.5
CAPITAL_SCALAR_LIVE=2.0
